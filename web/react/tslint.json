{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "./src/**/*.js"
    ]
  },
  "jsRules": {},
  "rules": {
    "semicolon": [true, "never", "ignore-interfaces"],
    "quotemark": [true, "single", "jsx-single"],
    "interface-name" : {
      "severity": "off"
    },
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": {
      "severity": "off"
    },
    "one-variable-per-declaration": {
      "severity": "off"
    },
    "curly": [true, "ignore-same-line"],
    "member-access": [false, "check-parameter-property"],
    "no-console": [true, "log"],
    "ordered-imports": [true, {
      "grouped-imports": true
    }],
    "trailing-comma": [true, {
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      },
      "esSpecCompliant": true
    }],
    "jsx-boolean-value": {
      "severity": "off"
    },
    "jsx-no-multiline-js": {
      "severity": "off"
    },
    "jsx-no-lambda": {
      "severity": "off"
    },
    "jsx-wrap-multiline": {
      "severity": "off"
    }
  },
  "rulesDirectory": []
}
