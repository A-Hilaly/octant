{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "./src/**/*.js"
    ]
  },
  "jsRules": {},
  "rules": {
    "semicolon": [true, "never", "ignore-interfaces"],
    "quotemark": [true, "single", "jsx-single"],
    "interface-name" : false,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "one-variable-per-declaration": false,
    "curly": [true, "ignore-same-line"],
    "member-access": [false, "check-parameter-property"],
    "no-console": [true, "log"],
    "ordered-imports": [true, {
      "grouped-imports": true
    }],
    "trailing-comma": [true, {
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      },
      "esSpecCompliant": true
    }],
    "jsx-boolean-value": ["never"],
    "jsx-no-multiline-js": ["none"],
    "jsx-no-lambda": ["none"]
  },
  "rulesDirectory": []
}
